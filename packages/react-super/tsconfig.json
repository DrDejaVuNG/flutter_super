{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["DOM", "ES2018"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}