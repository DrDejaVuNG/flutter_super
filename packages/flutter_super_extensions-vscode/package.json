{
  "name": "flutter-super",
  "displayName": "Flutter Super",
  "description": "Snippets and tools for the flutter super library.",
  "version": "1.0.1",
  "publisher": "Seyon Anko",
  "bugs": {
    "url": "https://github.com/DrDejaVuNG/super/issues",
    "email": "drdejavu08@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DrDejaVuNG/super"
  },
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "dart",
    "flutter",
    "super",
    "flutter-super",
    "state-management"
  ],
  "icon": "assets/logo.png",
  "activationEvents": [
    "onCommand:extension.new-module",
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": [
      {
        "title": "Flutter Super",
        "properties": {
          "flutter-super.checkForUpdates": {
            "type": "boolean",
            "default": true,
            "description": "Whether to check if you are using the latest package versions at startup."
          },
          "flutter-super.newModuleTemplate.type": {
            "type": "string"
          },
          "flutter-super.newModuleTemplate.createDirectory": {
            "type": "boolean",
            "default": true,
            "description": "Whether to create a module directory when creating a new module."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.new-module",
        "title": "Super: New Module",
        "icon": "assets/logo.png"
      },
      {
        "command": "extension.wrap-superbuilder",
        "title": "Wrap with SuperBuilder"
      },
      {
        "command": "extension.wrap-superapp",
        "title": "Wrap with SuperApp"
      },
      {
        "command": "extension.wrap-superlistener",
        "title": "Wrap with SuperListener"
      },
      {
        "command": "extension.wrap-superconsumer",
        "title": "Wrap with SuperConsumer"
      },
      {
        "command": "extension.wrap-asyncbuilder",
        "title": "Wrap with AsyncBuilder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.new-module",
          "group": "moduleGroup@1",
          "when": "explorerResourceIsFolder"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.wrap-superbuilder",
          "when": "editorLangId == dart"
        },
        {
          "command": "extension.wrap-superapp",
          "when": "editorLangId == dart"
        },
        {
          "command": "extension.wrap-superlistener",
          "when": "editorLangId == dart"
        },
        {
          "command": "extension.wrap-superconsumer",
          "when": "editorLangId == dart"
        },
        {
          "command": "extension.wrap-asyncbuilder",
          "when": "editorLangId == dart"
        }
      ]
    },
    "snippets": [
      {
        "language": "dart",
        "path": "./snippets/super_test.json"
      },
      {
        "language": "dart",
        "path": "./snippets/flutter_super.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/change-case": "^2.3.1",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.121",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^2.2.42",
    "@types/node": "^12.7.8",
    "@types/node-fetch": "^2.0.0",
    "@types/rimraf": "^2.0.2",
    "@types/semver": "^6.0.2",
    "@types/vscode": "^1.56.0",
    "ts-loader": "^9.4.2",
    "tslint": "^5.12.1",
    "typescript": "^3.5.1",
    "webpack": "^5.76.1",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.19",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.0.0",
    "semver": "^6.3.0"
  }
}
